{
    // Editor settings
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [80, 120],
    "editor.formatOnSave": true,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // File associations
    "files.associations": {
        "*.sh": "shellscript",
        "*.dts": "dts",
        "*.dtsi": "dts",
        "*.dtbo": "dts",
        "Makefile": "makefile",
        "*.mk": "makefile",
        "*.bp": "json",
        "Android.bp": "json",
        "Android.mk": "makefile"
    },

    // Shell script settings
    "shellcheck.enable": true,
    "shellcheck.executablePath": "/usr/bin/shellcheck",
    "shellcheck.run": "onSave",
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format",
        "editor.tabSize": 4
    },

    // Markdown settings
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },

    // Search exclusions
    "search.exclude": {
        "**/node_modules": true,
        "**/build": true,
        "**/out": true,
        "**/.repo": true,
        "**/aosp-rpi5": true,
        "**/*.log": true,
        "**/*.dtb": true,
        "**/*.dtbo": true
    },

    // Files to exclude from explorer
    "files.exclude": {
        "**/.git": false,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.tmp": true,
        "**/*.temp": true
    },

    // Git settings
    "git.enableCommitSigning": false,
    "git.autofetch": true,
    "git.confirmSync": false,

    // Terminal settings
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.fontSize": 13,

    // Bash IDE settings (if extension is installed)
    "bashIde.shellcheckPath": "/usr/bin/shellcheck",

    // Device Tree settings
    "devicetree.schema": "dtschema",

    // File encoding
    "files.encoding": "utf8",
    "files.eol": "\n"
}
